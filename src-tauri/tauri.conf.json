{
  "productName": "ShowMeme",
  "version": "0.1.0",
  "identifier": "com.showmeme.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "copyright": "MIT",
    "shortDescription": "Privacy-first meme organizer",
    "longDescription": "A privacy-first, local-first image organization app for managing your meme collection"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ShowMeme",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "plugins": {}
}
