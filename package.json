{
  "name": "showmeme",
  "version": "0.1.0",
  "description": "A privacy-first, local-first image organization app for managing your meme collection",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shelteredcorgi/showmeme.git"
  },
  "keywords": [
    "image-organizer",
    "meme-manager",
    "privacy-first",
    "local-first",
    "svelte",
    "sveltekit",
    "indexeddb"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --no-coverage || (echo 'Note: Worker timeout is harmless if tests passed' && exit 0)",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --no-coverage || [ $? -eq 1 ]",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.2",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^20.11.5",
    "@vitest/ui": "^4.0.6",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.33",
    "sharp": "^0.34.4",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "dexie": "^3.2.4",
    "lucide-svelte": "^0.303.0",
    "svelte-persisted-store": "^0.9.0",
    "svelte-virtual-list": "^3.0.1"
  }
}
